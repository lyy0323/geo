<script>
    function toggleDivVisibility() {
    const today = new Date();
    const divs = document.querySelectorAll('.dated-div');

    divs.forEach(div => {
        var start = new Date(div.getAttribute('data-start'));
        start.setFullYear(today.getFullYear());
        var end = new Date(div.getAttribute('data-end'));
        end.setFullYear(today.getFullYear());

        if (today >= start && today <= end) {
            div.style.display = 'block';
        } else {
            div.style.display = 'none';
        }
    });
}
</script>

<script>
    document.addEventListener('DOMContentLoaded', toggleDivVisibility);
    setInterval(toggleDivVisibility, 1000 * 60 * 60); // 每小时检查一次
</script>

